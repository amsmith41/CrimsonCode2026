{
  "name": "ouicode",
  "displayName": "OuiCode",
  "description": "Code Collaboratively over LAN and Bluetooth with OuiCode!",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.109.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ouicode.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "ouicode.hostSession",
        "title": "Host OuiCode Session"
      },
      {
        "command": "ouicode.joinSession",
        "title": "Join OuiCode Session"
      },
      {
        "command": "ouicode.confirmConnection",
        "title": "Confirm Connection"
      },
      {
        "command": "ouicode.cancelConnection",
        "title": "Cancel Connection"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "fileShareContainer",
          "title": "OuiCode",
          "icon": "media/ShareIcon.png"
        }
      ]
    },
    "views": {
      "fileShareContainer": [
        {
          "id": "fileShareSelector",
          "name": "Select Files to Share",
          "icon": "media/ShareIcon.png",
          "when": "ouicodeSessionStarting"
        },
        {
          "id": "connectionActions",
          "name": "Connection Actions",
          "icon": "$(broadcast)",
          "when": "!ouicodeSessionStarting && !ouicodeSessionActive"
        },
        {
          "id": "confirmConnectionActions",
          "name": "Connection Actions",
          "icon": "$(check)",
          "when": "ouicodeSessionStarting"
        },
        {
          "id": "activeSessionStatus",
          "name": "Active Session Status",
          "icon": "$(broadcast)",
          "when": "ouicodeSessionActive"
        },
        {
          "id": "inputSessionId",
          "name": "Input Session ID",
          "icon": "$(key)",
          "when": "ouicodeSessionStarting && !ouicodeSessionActive && !ouicodeHostingSession"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "inputSessionId",
        "contents": "Enter your session ID to join."
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.19.11",
    "@types/vscode": "^1.109.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0"
  },
  "dependencies": {
    "serialport": "^13.0.0",
    "ts-node": "^10.9.2"
  }
}
